<h2>Eaten burgers!</h2>

{{!-- <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> /partials/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul> --}}

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Haven't tried it!<br>
    <input type="radio" name="devoured" value="0"> Tried it!
  </div>

  <button type="submit">Add Burger</button>
</form>
